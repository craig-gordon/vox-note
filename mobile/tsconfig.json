{
  "extends": "./node_modules/expo/tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "moduleSuffixes": [".native", ""],
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "types": ["react-native", "expo"],
    "baseUrl": ".",
    "paths": {
      "@journaling-app/shared": ["../shared/src"],
      "@journaling-app/shared/*": ["../shared/src/*"],
      "react-native": ["./node_modules/react-native"],
      "expo-audio": ["./node_modules/expo-audio"],
      "expo-file-system": ["./node_modules/expo-file-system"],
      "expo-constants": ["./node_modules/expo-constants"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "../shared/src/**/*.ts",
    "../shared/src/**/*.tsx"
  ],
  "exclude": [
    "../shared/src/**/*.web.ts",
    "../shared/src/**/*.web.tsx"
  ]
}
