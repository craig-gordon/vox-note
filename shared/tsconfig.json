{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "moduleSuffixes": [".web", ""],
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "types": ["vite/client"],
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "paths": {
      "react-native": ["../mobile/node_modules/react-native"]
    }
  },
  "include": ["src"],
  "exclude": [
    "src/**/*.native.ts",
    "src/**/*.native.tsx",
    "src/**/*.web.ts",
    "src/**/*.web.tsx"
  ]
}
