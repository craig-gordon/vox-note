{
  "name": "journaling-app",
  "license": "MIT",
  "private": true,
  "workspaces": {
    "packages": ["shared", "web", "mobile"],
    "nohoist": [
      "**/expo",
      "**/expo/**",
      "**/expo-*",
      "**/expo-*/**",  
      "**/react-native",
      "**/react-native/**",
      "**/metro",
      "**/metro/**",
      "**/@expo/**",
      "**/@react-native/**"
    ]
  },
  "scripts": {
    "web:dev": "yarn workspace @journaling-app/web dev",
    "web:build": "yarn workspace @journaling-app/web build",
    "mobile:start": "yarn workspace @journaling-app/mobile start",
    "mobile:ios": "yarn workspace @journaling-app/mobile ios",
    "mobile:android": "yarn workspace @journaling-app/mobile android",
    "typecheck": "echo Checking root... && tsc && echo Checking web... && yarn workspace @journaling-app/web tsc --noEmit && echo Checking mobile... && yarn workspace @journaling-app/mobile tsc --noEmit && echo Checking shared... && yarn workspace @journaling-app/shared tsc --noEmit && echo All checks passed!",
    "typecheck:web": "yarn workspace @journaling-app/web tsc --noEmit",
    "typecheck:mobile": "yarn workspace @journaling-app/mobile tsc --noEmit",
    "typecheck:shared": "yarn workspace @journaling-app/shared tsc --noEmit"
  },
  "dependencies": {
    "date-fns": "^4.1.0",
    "react": "^19.2.0"
  },
  "devDependencies": {
    "@types/react": "^19.2.0",
    "typescript": "~5.9.3"
  },
  "resolutions": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  }
}
